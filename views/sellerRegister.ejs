       <div class="container-fluid">
        <div class="row justify-content-evenly">
          <div class="col-lg-6">
            <form action="/sellerRegiistration">
                <h2>Sign up</h2>
                <label for="email">Email</label>
                <input type="text" class="form-control" name="email" required />
                <div class="email"></div>
                <label for="BusinessName">Business Name</label>
                <input type="text" class="form-control"  name="BusinessName" required />
                <div class="Business"></div>
                <label for="PhoneNumber">Phone Number</label>
                <input type="number"  class="form-control" name="PhoneNumber" required />
                <div class="Phone"></div>
                <label for="NIDNumber">NID Number</label>
                <input type="number" class="form-control"  name="NIDNumber" required />
                <div class="NID"></div>
                <label for="BankAcc">Bank Accountl</label>
                <input type="number" class="form-control"  name="BankAcc" required />
                <div class="Bank"></div>
                <label for="TinNumber">Tin Number</label>
                <input type="number" class="form-control"  name="TinNumber" required />
                <div class="Tin"></div>
                <label for="Address">Address</label>
                <input type="text" class="form-control"  name="Address" required />
                <div class="Address"></div>
                <label for="PickUpAddress">Pick Up Address</label>
                <input type="text" class="form-control"  name="PickUpAddress" required />
                <div class="Pick "></div>
                <label for="password">Password</label>
                <input type="password" class="form-control"  name="password" required />
                <div class="password error"></div>
                <button>Sign up</button>
            </form>
           
          </div>
        </div>

